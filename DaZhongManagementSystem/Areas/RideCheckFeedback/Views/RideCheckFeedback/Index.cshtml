                        <div class="st_title"><span>[8-检查项目]&nbsp;&nbsp;</span>不讲脏话、抛物、吐痰</div>
                    </div>
                    <div class="s_option">
                        @{
                            if (true)
                            {
                                string optiona = "";
                                string optionb = "";
                                string feedbackAnswer2 = "active";
                                string disable = "";
                                string feedbackAnswer3 = "";
                                string feedbackAnswer4 = "";
                                if (isOpen && rideCheckFeedback.RideCheckFeedback_Items.Count > 7)
                                {
                                    optiona = rideCheckFeedback.RideCheckFeedback_Items[7].FeedbackAnswer1;
                                    optionb = optiona == "B" ? "active" : "";
                                    optiona = optiona == "A" ? "active" : "";
                                    if (optiona == "active")
                                    {
                                        disable = "disabled='disabled'";
                                    }

                                    feedbackAnswer2 = rideCheckFeedback.RideCheckFeedback_Items[7].FeedbackAnswer2 == "1" ? "checked='checked'" : "";
                                    feedbackAnswer3 = rideCheckFeedback.RideCheckFeedback_Items[7].FeedbackAnswer3 == "1" ? "checked='checked'" : "";
                                    feedbackAnswer4 = rideCheckFeedback.RideCheckFeedback_Items[7].FeedbackAnswer4 == "1" ? "checked='checked'" : "";
                                }
                                <div class="so_p">
                                    <div class="option kk @optiona" namesub="1">A</div>
                                    <div class="title" namesub="1">合格(执行)</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @optionb" namesub="1">B</div>
                                    <div class="title" namesub="1">不合格(执行)</div>
                                </div>
                                <div class="infor">
                                    <div class="inforTitle" namesub="1">单项不合格</div>
                                    <div class="inputItem"><input id="ckb_swearing" class="inputItemChecbox" type="checkbox" @feedbackAnswer2 @disable /><div class="inputItemText"><label for="ckb_swearing">讲脏话</label></div></div>
                                    <div class="inputItem"><input id="ckb_parabolic" class="inputItemChecbox" type="checkbox" @feedbackAnswer3 @disable /><div class="inputItemText"><label for="ckb_parabolic">抛物</label></div></div>
                                    <div class="inputItem"><input id="ckb_spitting" class="inputItemChecbox" type="checkbox" @feedbackAnswer4 @disable /><div class="inputItemText"><label for="ckb_spitting">吐痰</label></div></div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="swiper-slide swiper-no-swiping" data-swiper-slide-index="8">
                    <div class="s_title">
                        <div class="st_title"><span>[9-简答题]&nbsp;&nbsp;</span>意见与建议（反应以上每一项的执行情况）</div>
                    </div>
                    <div class="s_option">
                        @{
                            if (true)
                            {
                                string feedbackAnswer1 = "";
                                if (isOpen && rideCheckFeedback.RideCheckFeedback_Items.Count > 8)
                                {
                                    feedbackAnswer1 = rideCheckFeedback.RideCheckFeedback_Items[8].FeedbackAnswer1;
                                }
                                <div namesub="4">
                                    <textarea style="width: 76%;height: 10rem;margin:5% 10%;padding: 5px;" onchange="LeaveSubmit(this)">@feedbackAnswer1</textarea>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="swiper-slide swiper-no-swiping" data-swiper-slide-index="9">
                    <div class="s_title">
                        <div class="st_title"><span>[10-检查项目]&nbsp;&nbsp;</span>驾驶员服务（请选择以下项目在检查中有不合格项目）</div>
                    </div>
                    <div class="s_option">
                        @{
                            if (true)
                            {
                                string feedbackAnswer1 = "";
                                string feedbackAnswer2 = "";
                                string feedbackAnswer3 = "";
                                string feedbackAnswer4 = "";
                                string feedbackAnswer5 = "";
                                string feedbackAnswer6 = "";
                                string feedbackAnswer7 = "";
                                if (isOpen && rideCheckFeedback.RideCheckFeedback_Items.Count > 0)
                                {
                                    feedbackAnswer1 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer1 == "1" ? "active" : "";
                                    feedbackAnswer2 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer2 == "1" ? "active" : "";
                                    feedbackAnswer3 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer3 == "1" ? "active" : "";
                                    feedbackAnswer4 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer4 == "1" ? "active" : "";
                                    feedbackAnswer5 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer5 == "1" ? "active" : "";
                                    feedbackAnswer6 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer6 == "1" ? "active" : "";
                                    feedbackAnswer7 = rideCheckFeedback.RideCheckFeedback_Items[9].FeedbackAnswer7 == "1" ? "active" : "";

                                }
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer1" namesub="2">A</div>
                                    <div class="title" namesub="2">驾驶员车内吸烟</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer2" namesub="2">B</div>
                                    <div class="title" namesub="2">不协助乘客放取行李</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer3" namesub="2">C</div>
                                    <div class="title" namesub="2">驾驶员不帮老助残</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer4" namesub="2">D</div>
                                    <div class="title" namesub="2">不主动给票</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer5" namesub="2">E</div>
                                    <div class="title" namesub="2">未选择合理路线</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer6" namesub="2">F</div>
                                    <div class="title" namesub="2">保险带不整洁</div>
                                </div>
                                <div class="so_p">
                                    <div class="option kk @feedbackAnswer7" namesub="2">G</div>
                                    <div class="title" namesub="2">都合格</div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="swiper-slide swiper-no-swiping" data-swiper-slide-index="10">
                    <div class="s_title">
                        <div class="st_title"><span>[11-上传]&nbsp;&nbsp;</span>上传发票/附件</div>
                    </div>
                    <div class="s_option">
                        <form>
                            @{
                                if (true)
                                {
                                    string feedbackAnswer1 = "/Areas/RideCheckFeedback/Views/_img/add_image.png";
                                    List<Business_RideCheckFeedback_Attachment> attachments = new List<Business_RideCheckFeedback_Attachment>();
                                    if (isOpen && rideCheckFeedback.RideCheckFeedback_Items.Count > 10)
                                    {
                                        feedbackAnswer1 = rideCheckFeedback.RideCheckFeedback_Items[10].FeedbackAnswer1;
                                        if (feedbackAnswer1 == "")
                                        {
                                            feedbackAnswer1 = "/Areas/RideCheckFeedback/Views/_img/add_image.png";
                                        }
                                        attachments = rideCheckFeedback.RideCheckFeedback_Attachments;
                                    }

                                    <div id="invoicediv" class="infor">
                                        <div class="inforTitle" namesub="1">上传发票<span></span></div>
                                        <input type="file" id="upload_Invoice" name="upload_Invoice" class="file" onchange="uploadInvoice(this)" accept="image/*" style="width:90%; padding:0px;display:none;" />
                                        <div style="margin:auto;text-align:center;">
                                            <img id="image_invoice" name="image_invoice" class="image_invoice" src="@feedbackAnswer1" />
                                        </div>
                                    </div>
                                    <hr style="margin-bottom:20px;border: #dcdcdc solid 1px;" />
                                    <div class="infor">
                                        <div class="inforTitle" namesub="1">上传附件</div>
                                        <input type="file" id="upload_Attachment" name="upload_Attachment" onchange="uploadAttachment(this)" class="file" style="width:90%;padding:0px;display:none;" value="" />
                                        <div style="margin:auto;text-align:center;">
                                            <img class="image_attachment" name="image_attachment" src="/Areas/RideCheckFeedback/Views/_img/add_image.png" />
                                        </div>
                                        <ul name="attachmentul">
                                            @if (attachments.Count > 0)
                                            {
                                                foreach (var attachment in attachments)
                                                {
                                                    <li filePath='@attachment.AttachmentPath'><span onclick='deleteAttachment(this)' style='color: red;font-size: 50px;'>×</span>@attachment.AttachmentName</li>
                                                }
                                            }
                                        </ul>
                                    </div>

                                }
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
        <!--div悬浮在上方的div上面,让上面的div内容只读-->
        <div id="dvTrans" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: transparent; display: none; z-index: 9999">
        </div>
    </section>

