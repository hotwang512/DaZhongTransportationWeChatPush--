@using DaZhongManagementSystem.Entities.TableEntity
@{
    ViewBag.Title = "协议操作历史";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentModuleRolePermission = ViewBag.CurrentModulePermission as Sys_Role_Module;
}

@section pageTitle
{
    @ViewBag.Title
}

@section js
{

    <script src="@Url.Content("~/Areas/WeChatPush/Views/_js/AgreementList.js")"></script>
    <script src="@Url.Content("~/_theme/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js")"></script>

}

@*css*@
@section css{

    <link href="@Url.Content("~/_theme/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.css")" rel="stylesheet" />

}

@{
    if (currentModuleRolePermission.Export == 1)
    {
    <table style="margin-top: 10px;">
        <tr style="height: 50px;">
            <td>
                <button id="btnExport" class="buttons"><i class="iconfont btn_icon" style="color: black!important;">&#xe607;</i><span style="margin-left: 7px; float: left;">导出</span></button>
            </td>
        </tr>
    </table>
    <!-- 顶部按钮 -->
    }
}

<!-- 中部条件 -->
<div class="mk">
    <div class="header_mk">
        <div class="header_icon"></div>
        <div class="header_text_div"><span class="header_text_span">查询</span></div>
    </div>
    <div class="body_mk" style="height: 100px">
        <table style="margin-top: 20px; width: 1100px; margin-left: 20px;">
            <tr style="height: 45px;">
                <td align="center" style="width: 80px;">协议标题：</td>
                <td style="width: 210px;">
                    <input id="txtTitle" type="text" class="input_text form-control" />
                </td>
                <td align="center">操作人：</td>
                <td style="width: 210px;">
                    <input id="txtName" type="text" class="input_text form-control" />
                </td>
                <td align="right">手机号：</td>
                <td style="width: 210px;">
                    <input id="txtMobilePhone" type="text" class="input_text form-control" />
                </td>
            </tr>
            <tr style="height: 45px;">
                <td align="right" style="width: 80px;">操作结果：</td>
                <td>
                    <div id='jqxWidget'></div>
                    @*<input id="txtResult" type="text" class="input_text form-control" />*@
                </td>
                <td align="right" style="width: 80px;">操作时间起：</td>
                <td>
                    <input id="txtOperationTimeFrom" type="text" class="input_text form-control" />
                </td>
                <td align="right" style="width: 80px;">操作时间止：</td>
                <td>
                    <input id="txtOperationTimeTo" type="text" class="input_text form-control" />
                </td>
                <td align="right">
                    <button id="btnSearch" type="button" class="buttons"><i class="iconfont btn_icon" style="color: black !important;">&#xe604;</i><span style="margin-left: 7px; float: left;">查询</span></button>
                </td>
                <td align="center">
                    <button id="btnReset" type="button" class="buttons"><i class="iconfont btn_icon" style="color: black !important;">&#xe603;</i><span style="margin-left: 7px; float: left;">重置</span></button>
                </td>
            </tr>
        </table>
    </div>
</div>
<!-- 中部条件 -->

<!-- 底部表格 -->
<center>
<div class="mk" style="border-bottom: 0;">
    <div class="header_mk" style="border-bottom: 0;">
        <div class="header_icon"></div>
        <div class="header_text_div"><span class="header_text_span">数据列表</span></div>
    </div>

    <div id="jqxTable" class="jqxTable" style="border-left: 0; ">
    </div>
</div>
</center>
<!-- 底部表格 -->

